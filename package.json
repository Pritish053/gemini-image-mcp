{
  "name": "gemini-image-mcp",
  "version": "1.0.0",
  "description": "MCP server for image generation and modification using Google Gemini API",
  "main": "dist/index.js",
  "bin": {
    "gemini-image-mcp": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gemini",
    "image-generation",
    "ai",
    "claude",
    "anthropic",
    "google-ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pritish053/gemini-image-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Pritish053/gemini-image-mcp/issues"
  },
  "homepage": "https://github.com/Pritish053/gemini-image-mcp#readme",
  "author": "Pritish Maheta",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.5",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}